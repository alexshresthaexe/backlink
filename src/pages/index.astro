---
import Layout from '../layouts/Layout.astro';
import BlogCard from '../components/BlogCard.astro';

const title = "Cost-Effective House Designs: Affordable and Efficient Living in Nepal";
const description = "Comprehensive guide for house design in Nepal. Learn about modern house designs, 4-room layouts, and essential building tips for Nepali homes.";
---

<Layout title={title} description={description}>
	<main>
			<BlogCard
				href="/traditional-modern-elements"
				title="Cost-Effective House Designs: Affordable and Efficient Living in Nepal"
				description="Explore how Nepali house designs beautifully combine traditional architectural elements with modern conveniences to create unique and functional living spaces."
				date="2024-04-15"
			/>
		</div>

		<section class="resources">
			<h2>Additional Resources</h2>
			<p>For more detailed house designs and professional consultation, visit our partner: 
				<a href="https://housedesigninnepal.com/" target="_blank" rel="noopener">house design in Nepal</a>
			</p>
		</section>
	</main>
</Layout>

<style>
	main {
		margin: auto;
		padding: 2rem;
		width: 1200px;
		max-width: calc(100% - 2rem);
		color: #333;
		font-size: 18px;
		line-height: 1.6;
	}
	h1 {
		font-size: 3rem;
		font-weight: 700;
		line-height: 1.2;
		text-align: center;
		margin-bottom: 1em;
		color: #2c3e50;
	}
	.text-gradient {
		background: linear-gradient(45deg, #3498db, #2c3e50);
		-webkit-background-clip: text;
		-webkit-text-fill-color: transparent;
		background-size: 400%;
		background-position: 0%;
	}
	.intro {
		font-size: 1.2rem;
		text-align: center;
		margin-bottom: 3rem;
		color: #666;
	}
	.blog-grid {
		display: grid;
		grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
		gap: 2rem;
		margin-bottom: 3rem;
	}
	.resources {
		background: #f8f9fa;
		padding: 2rem;
		border-radius: 8px;
		margin-top: 3rem;
	}
	.resources h2 {
		color: #2c3e50;
		margin-bottom: 1rem;
	}
	.resources a {
		color: #3498db;
		text-decoration: none;
		font-weight: 500;
	}
	.resources a:hover {
		text-decoration: underline;
	}
</style>